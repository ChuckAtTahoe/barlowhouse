mixin inputCheckbox(name, label, value)
  .form-group
    label(class="custom-control custom-checkbox")
      - if (value) {
          input(type="checkbox", name= name, value="1", class="custom-control-input", checked="checked")
      - } else {
          input(type="checkbox", name= name, value="1", class="custom-control-input")
      - }
      span(class="custom-control-indicator")
      span(class="custom-control-description")= label
mixin submitButton(name, label)
  button(type="submit", class="btn btn-primary", name= name)= label
