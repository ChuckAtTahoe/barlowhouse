mixin inputText(name, label, value, errorMsg)
  - let gClass = 'form-group'
  - if (errorMsg) {
  -   gClass += ' has-danger'
  - }
  div(class= gClass)
    label(for= name)= label
    input(type="text", id= name, name= name, class="form-control", value= value)
    - if (errorMsg) {
        div(class="form-control-feedback")= errorMsg
    - }
